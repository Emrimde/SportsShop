<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @* <link rel="stylesheet" href="~/lib/materialize/css/materialize.css" /> *@
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportsShop.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-black py-1" id="nav-1">
        <div class="container">
            <h5 class="text-center text-white">Maximalize your gains - GymSigma</h5>
        </div>
    </header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light" id="nav-2">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img class="img-thumbnail company-icon" style="width:100px;" src="~/images/gymsigma.png" alt="company logo" />
            </a>

            <!-- Hamburger menu for small screens -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation links -->
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item mx-lg-3">
                        <a class="nav-link text-dark" asp-controller="Clothes" asp-action="Index">Clothes</a>
                    </li>
                    <li class="nav-item mx-lg-3">
                        <a class="nav-link text-dark" asp-controller="Supplements" asp-action="Index">Supplements</a>
                    </li>
                    <li class="nav-item mx-lg-3">
                        <a class="nav-link text-dark" asp-controller="Accessories" asp-action="Index">Accesories</a>
                    </li>
                    <li class="nav-item mx-lg-3">
                        <a class="nav-link text-dark" asp-controller="Drinks" asp-action="Index">Drinks</a>
                    </li>
                    <li class="nav-item mx-lg-3">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="AboutUs">About us</a>
                    </li>
                    <li class="nav-item mx-lg-3">
                        <a class="nav-link text-dark" asp-controller="Users" asp-action="SignIn">Sign in</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div style="background-color:#f0f0f2;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark  footer text-muted py-4 ">
        <div class="container">
            <div class="row text-center text-md-start">
                <div class="col-12 col-md-2 d-flex justify-content-center align-items-center mb-3 mb-md-0">
                    <img class="img-thumbnail company-icon" src="~/images/gymsigma.png" />
                </div>
                <div class="col-6 col-md-2">
                    <h5 class="fw-bold">Shopping</h5>
                    <p>Delivery time and cost</p>
                    <p>Payment methods</p>
                </div>
                <div class="col-6 col-md-2">
                    <h5 class="fw-bold">Help</h5>
                    <p>Customer Service</p>
                    <p>Returns</p>
                </div>
                <div class="col-6 col-md-2">
                    <h5 class="fw-bold">Information</h5>
                    <p>Privacy Policy</p>
                    <p>Terms of Service</p>
                </div>
                <div class="col-6 col-md-2">
                    <h5 class="fw-bold">Follow us</h5>
                    <p>Facebook</p>
                    <p>Instagram</p>
                </div>
            </div>
            <div class="text-center mt-3">
                &copy; 2025 - SportsShop - <a class="text-light" asp-controller="Home" asp-action="Index">Home page</a>
            </div>
        </div>
    </footer>



    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
   
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    @* <script src="~/lib/materialize/js/materialize.js"> </script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
