@model AddressAddRequest
@{
    ViewBag.Title = "Account Settings";
}
<div class="container pb-4">
    <div class="row">
        <div class="col-12 mt-4">
            @if (User.Identity!.IsAuthenticated)
            {
                <h2 class="text-center">Hello @User.Identity.Name!</h2>
            }
            
            <h2>Addresses/Change Password</h2>
            <div class="mb-3">
                <a asp-controller="Address" asp-action="Index" class="btn btn-outline-dark">Show addresses</a>
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6">
            <div class="bg-white p-4 mb-3 rounded shadow">
                <h2 class="text-center mb-4">Add address for future orders!</h2>
                <form asp-controller="Address" asp-action="AddAddress" method="POST">
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <select asp-for="CountryId" asp-items="ViewBag.Countries" class="form-control">
                            <option value="">Select Country</option>
                        </select>
                        <span asp-validation-for="CountryId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="city" class="form-label">City</label>
                        <input asp-for="City" class="form-control">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="street" class="form-label">Street</label>
                        <input asp-for="Street" class="form-control">
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="zipcode" class="form-label">Zip Code</label>
                        <input asp-for="ZipCode" class="form-control">
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-dark text-white w-100">Add address</button>
                </form>
            </div>
        </div>

        <div class="col-md-6 mt-4">
            <div class="bg-white p-4 mb-3 rounded shadow">
                <h2 class="text-center mb-4">Change password</h2>
                <form asp-action="ChangePassword" method="POST">
                    <div class="mb-3">
                        <label for="currentPassword" class="form-label">Current password</label>
                        <input type="password"  name="CurrentPassword" class="form-control">
                        <span class="text-danger" ></span>
                    </div>
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">New password</label>
                        <input type="password"   class="form-control">
                        <span class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm password</label>
                        <input type="password" class="form-control">
                        <span class="text-danger" ></span>
                    </div>
                    <button type="submit" class="btn btn-dark text-white w-100">Change password</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}