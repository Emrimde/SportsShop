@model AddressDTO
@{
    ViewBag.Title = "Account Settings";
}
<div class="container pb-4">
    <div class="row">
        <div class="col-12 mt-4">
            <h1>Account settings</h1>
            <h2>Addresses/Change Password</h2>
            <div class="mb-3">
                <button class="btn btn-outline-dark" id="showAddressesBtn">Show addresses</button>
            </div>
        </div>
    </div>

    <div class="row mt-2">
        
        <div class="col-md-6">
            

            <div class="bg-white p-4 mb-3 rounded shadow">
                <h2 class="text-center mb-4">Add Address</h2>
                <form asp-action="AddAddress" method="POST">
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" id="country" asp-for="Country" class="form-control">
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="city" class="form-label">City</label>
                        <input type="text" id="city" asp-for="City" class="form-control">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="street" class="form-label">Street</label>
                        <input type="text" id="street" asp-for="Street" class="form-control">
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="zipcode" class="form-label">Zip Code</label>
                        <input type="text" id="zipcode" asp-for="ZipCode" class="form-control">
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-dark text-white w-100">Add Address</button>
                </form>
            </div>
        </div>

        <!-- Right column: Password change -->
        <div class="col-md-6 mt-4">
            <div class="bg-white p-4 mb-3 rounded shadow">
                <h2 class="text-center mb-4">Change Password</h2>
                <form asp-action="ChangePassword" method="POST">
                    <div class="mb-3">
                        <label for="currentPassword" class="form-label">Current Password</label>
                        <input type="password" id="currentPassword" name="CurrentPassword" class="form-control">
                        <span class="text-danger" data-valmsg-for="CurrentPassword"></span>
                    </div>
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">New Password</label>
                        <input type="password" id="newPassword" name="NewPassword" class="form-control">
                        <span class="text-danger" data-valmsg-for="NewPassword"></span>
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control">
                        <span class="text-danger" data-valmsg-for="ConfirmPassword"></span>
                    </div>
                    <button type="submit" class="btn btn-dark text-white w-100">Change Password</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}