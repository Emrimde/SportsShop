@using SportsShop.Core.ServiceContracts.DTO.AccountDto
@model SignInDto
@{
    ViewData["Title"] = "Sign in";
}
<div class="container min-vh-100 d-flex align-items-start  justify-content-center">
    <div class="row w-100 mt-5">
        <div class="col-md-6 offset-md-3 bg-white p-4 rounded shadow">
            <h2 class="text-center mb-4">Sign in</h2>
            <form asp-action="SignIn" method="POST">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-dark text-white w-100">Sign in</button>

                <span asp-validation-summary="Password" class="text-danger"></span>
            </form>
            <div><a class="text-muted" asp-action="CreateUser">Don't have account? Register!!</a> </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}