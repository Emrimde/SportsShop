@model List<AddressViewModel>
@{
    ViewData["Title"] = "Addresses";
}

<div class="container pt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.City</h5>
                        <p class="card-text">
                            <strong>Country:</strong> @item.Country <br />
                            <strong>Street:</strong> @item.Street <br />
                            <strong>ZipCode:</strong> @item.ZipCode
                        </p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="Account" asp-action="EditAddress" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-controller="Account" asp-action="DeleteAddress" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
