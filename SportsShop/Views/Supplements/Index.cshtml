@using SportsShop.Models;
@model List<Supplement>

@{
    ViewData["Title"] = "Supplements";
}

<div class="container pt-4">
    <div class="row g-4">
        <div class="col-md-3 col-lg-2">
            <form action="/" method="post">
                <h5><label class="fw-bold" for="flavor">Flavor</label></h5>
                <select class="form-select" id="flavor">
                    <option value="option-1">Fruity</option>
                    <option value="option-2">Tea</option>
                    <option value="option-3">Coffee</option>
                </select>
                <h5 class="mt-2"><label class="fw-bold" for="supplements">Supplements:</label></h5>
                <select class="form-select" id="supplements">
                    <option value="option-1">Creatine</option>
                    <option value="option-2">Citrulline</option>
                    <option value="option-3">Caffeine</option>
                </select>
            </form>
        </div>
        <div class="col-12 col-md-9">
            <div class="row g-4 justify-content-center">
                @foreach (Supplement item in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 mb-3">
                        <div class="card h-100">
                            <img class="card-img-top" src="@(Url.Content(item.ImagePath))" alt="@item.Product.Name" />
                            <div class="card-body text-center">
                                <h5 class="card-title">@item.Product.Name - @item.Weight </h5>
                                <p class="card-text">@item.Product.Price </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>