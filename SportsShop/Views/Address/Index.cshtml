@model IEnumerable<AddressResponse>
@{
    ViewData["Title"] = "Addresses";
}

<div class="container pt-4 min-vh-100 d-flex flex-column">
    <div class="row">
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
            
        @foreach (var item in Model)
        {
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.City</h5>
                        <p class="card-text">
                            <strong>Country:</strong> @item.CountryName <br />
                            <strong>Street:</strong> @item.Street <br />
                            <strong>ZipCode:</strong> @item.ZipCode
                        </p>
                    </div>
                    <div class="card-footer text-center">
                        <form asp-controller="Address" asp-action="DeleteAddress" asp-route-addressId="@item.Id">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                        <a asp-controller="Address" asp-action="EditAddress" asp-route-addressId="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                        
                    </div>
            </div>
              
        }
        </div>
    </div>
</div>
