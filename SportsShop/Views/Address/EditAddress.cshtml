@using SportsShop.Core.ServiceContracts.DTO.AddressDto
@model AddressUpdateRequest
@{
    ViewBag.Title = "Edit Address";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100">
        <div class="col-md-6 offset-md-3 bg-white p-4 rounded shadow">
            <h2 class="text-center mb-4">Edit Address</h2>
            <form asp-action="EditAddress"  method="POST">
                <div class="mb-3">
                    <label asp-for="CountryId" class="form-label">Country</label>
                    <select asp-for="CountryId" asp-items="ViewBag.Countries" class="form-control">
                    </select>
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="City" class="form-label">City</label>
                    <input asp-for="City" value="@Model.City" class="form-control">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Street" class="form-label">Street</label>
                    <input asp-for="Street" class="form-control">
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ZipCode" class="form-label">Zip Code</label>
                    <input type="text" asp-for="ZipCode" class="form-control">
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" value="@Model.Id">
                <button type="submit" class="btn btn-dark text-white w-100">Edit Address</button>
               
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
